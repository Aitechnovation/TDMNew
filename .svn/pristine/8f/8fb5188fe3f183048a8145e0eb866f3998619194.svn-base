body {
    padding-top: 0px;
    padding-bottom: 20px;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

/* Override the default bootstrap behavior where horizontal description lists 
   will truncate terms that are too long to fit in the left column 
*/
.dl-horizontal dt {
    white-space: normal;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}


.align-right {
        text-align: right!important
    }

    @media (min-width: 769px) {
        .map-height {
            height: 100%;
        }
    }

    @media (min-width: 415px) and (max-width: 768px) {
        .map-height {
            height: 957px;
        }
        .padding-top-0 {
            padding-top: 0px!important;
        }
    }

    @media (max-width: 414px) {
        .map-height {
            height: 500px;
        }
        .padding-top-0 {
            padding-top: 0px!important;
        }
    }


.new-height {
    min-height: 313px;
}

.home-title {
    margin-top: 60px;
    font-size: 20px;
    line-height: 28px;
}

@media (min-width: 1024px) and (max-width: 1200px) {
    .footer-container-width {
        width: 1000px;
    }

    .footer-bottom {
        margin-top: 0px !important;
    }

    .new-height {
        min-height: 275px;
    }

    .home-title {
        margin-top: 40px;
        font-size: 18px;
        line-height: 26px;
    }
}

@media (min-width: 415px) and (max-width: 768px) {

    .footer-bottom {
        margin-top: 0px !important;
    }

    .new-height {
        min-height: 286px;
    }

    .home-title {
        margin-top: 30px;
        font-size: 16px;
        line-height: 24px;
    }
}

@media (min-width: 376px) and (max-width: 414px) {
    .footer-container-width {
        width: 400px;
        padding-left: 0px;
    }

    .footer-bottom {
        margin-top: 0px !important;
    }

    .home-title {
        margin-top: 30px;
        font-size: 14px;
        line-height: 22px;
    }
}

@media (max-width: 375px) {
    .footer-container-width {
        width: 360px;
        padding-left: 0px;
    }

    .footer-bottom {
        margin-top: 0px !important;
    }

    .home-title {
        margin-top: 30px;
        font-size: 14px;
        line-height: 22px;
    }
}

.table thead tr th {
	border: 1px solid rgba(30, 30, 30, .2);
	background-color: #4367b0;
	color: #fff;
	vertical-align: top;
}
.table tbody tr td {
    border: 1px solid rgba(30, 30, 30, .2);
}

.input__screen-full {
	max-width: 100% !important;
	margin-bottom: 15px;
}

.modal-manage .modal-header, .modal-manage .modal-body {
	border-bottom: 1px solid #d2d2d2 !important;
}